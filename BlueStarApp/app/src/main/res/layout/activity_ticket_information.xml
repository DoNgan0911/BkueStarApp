<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ticket_information"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/ticket_inf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Thông tin vé đã đặt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp">

            <!-- Cột 1: Nơi đến, Giờ đi, Tên hành khách, Đồ ăn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nơi đến"
                    android:gravity="left" />
                <TextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nơi đến CSDL"
                    android:gravity="left" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ đi"
                    android:layout_marginTop="20dp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/timego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ đi CSDL"
                    android:gravity="left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên hành khách"
                    android:layout_marginTop="20dp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/nameofpassager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên Hành khách"
                    android:gravity="left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="ID vé" />

                <TextView
                    android:id="@+id/idticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="left" />
            </LinearLayout>



            <!-- Cột 3: Nơi đi, Thời gian tới, Ghế, Hạng vé -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nơi đi"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/towhere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nơi đi CSDL"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ đến"
                    android:layout_marginTop="20dp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/timearrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giờ đến csdl"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghế"
                    android:layout_marginTop="20dp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/seat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghế"

                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hạng vé"
                    android:layout_marginTop="20dp"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/typeofticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hạng vé csld"
                    android:gravity="right" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/canhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Thông tin cá nhân" />

</LinearLayout>
