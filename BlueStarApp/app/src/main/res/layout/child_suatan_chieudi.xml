<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_thongtinhanhkhach"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/fromLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"

                android:layout_marginTop="16dp"
                android:text="-"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/fromLocation"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/toLocation"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView150"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewChieuDi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="#8BC34A"
                android:text="Chiều đi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fromLocation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/viewBottomBorder1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/hovaten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="TextView"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <!-- Thêm nhiều item khác tương tự -->
                <LinearLayout
                    android:id="@+id/layoutBanhMi"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_hanhlykygui"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/textViewBanhMi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Bánh mì + Nước suối + Hạt điều" />
                    <TextView
                        android:id="@+id/textView86"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="86.000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDownBanhMi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_down_24" />

                        <TextView
                            android:id="@+id/textViewSLBanhMi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/imageViewUpBanhMi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_up_24" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutMiY"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_hanhlykygui"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/textViewMiY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Mì ý + Nước suối + Hạt điều" />
                    <TextView
                        android:id="@+id/textView136"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="136.000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDownMiY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_down_24" />

                        <TextView
                            android:id="@+id/textViewSLMiY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/imageViewUpMiY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_up_24" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutComTam"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_hanhlykygui"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/textViewComTam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Cơm tấm + Nước suối + Hạt điều" />
                    <TextView
                        android:id="@+id/textView186"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="186.000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDownComTam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_down_24" />

                        <TextView
                            android:id="@+id/textViewSLComTam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/imageViewUpComTam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_up_24" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutComChienChay"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_hanhlykygui"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/textViewComChienChay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Cơm chiên chay + Nước suối + Hạt điều" />
                    <TextView
                        android:id="@+id/textView200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="200.000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewDownComChienChay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_down_24" />

                        <TextView
                            android:id="@+id/textViewSLComChienChay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0" />

                        <ImageView
                            android:id="@+id/imageViewUpComChienChay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_arrow_circle_up_24" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</LinearLayout>